package DB;
sub afterinit{
  require Data::Dumper;
#  use Data::Printer colored=>1, deparse=>1;
  require Perl6::Say;
}

# d: DumperでダンプData::Dumper / 非常に便利
# source: id:walf443
$DB::alias{'d'} = 's/^d(.*)/print Data::Dumper::Dumper $1/';

# pp: Data::Printerでダンプ (スカラは無理)
# source: perldoc Data::Printer
$DB::alias{'pp'} = 's/^pp(.*)/DB::pp/';

sub pp {
  my $expr = shift;
  require Data::Dumper;
  print Data::Printer::p($expr);
}

# source: ラクダ本
$alias{len}  = 's/^len(.*)/p length($1)/';
$alias{stop} = 's/^stop (at|in)/b/'; #breakpointを設置できる

1;

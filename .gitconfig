[user]
    name = m-ueno
    email = m-ueno@users.noreply.github.com
[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
    interactive = auto
    grep = auto
[alias]
    addp = add -p
    st = !"tig status"
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    ls = ls-files
    unstage = reset HEAD --
    last = log -1 HEAD
    fix = !"git add -u && git commit -m 'fix' && git push"
    branch-root = merge-base master HEAD
    rebase-branch = "!git rebase -i `git merge-base master HEAD`"
[diff]
    tool = vimdiff
    patience = true
[url "https://"]
    insteadOf = git://
[gist.github.com]
    user = m-ueno
[github]
    user = m-ueno
[push]
    default = matching
[core]
    excludesfile = /home/masaru/.gitignore
[credential]
    helper = cache --timeout=86400
    excludesfile = $HOME/.gitignore_global
[rebase]
    autosquash = true  # See help rebase
